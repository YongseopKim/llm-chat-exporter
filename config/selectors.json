{
  "version": "1.0.0",
  "lastUpdated": "2025-11-29",
  "platforms": {
    "chatgpt": {
      "hostname": "chatgpt.com",
      "selectors": {
        "messages": {
          "primary": "[data-message-author-role]",
          "fallbacks": [
            "[data-turn]",
            "article[data-testid^=\"conversation\"]"
          ]
        },
        "content": {
          "user": ".whitespace-pre-wrap",
          "assistant": ".markdown"
        },
        "generation": "button[aria-label*=\"Stop\"]",
        "role": {
          "strategy": "attribute",
          "attributes": ["data-message-author-role", "data-turn"]
        },
        "title": {
          "strategy": "document-title",
          "prefixPattern": "^ChatGPT\\s*[-–—]\\s*",
          "emojiPattern": "^[\\p{Emoji_Presentation}\\p{Extended_Pictographic}]\\s*"
        }
      }
    },
    "claude": {
      "hostname": "claude.ai",
      "selectors": {
        "messages": {
          "combined": "[data-testid=\"user-message\"], [data-is-streaming], [data-testid=\"assistant-message\"]"
        },
        "content": {
          "user": ".whitespace-pre-wrap",
          "assistant": ".standard-markdown, .progressive-markdown"
        },
        "generation": "[data-is-streaming=\"true\"]",
        "role": {
          "strategy": "hybrid",
          "userTestId": "user-message",
          "assistantTestId": "assistant-message",
          "streamingAttribute": "data-is-streaming"
        },
        "title": {
          "strategy": "selector",
          "selector": "div.truncate.font-base-bold",
          "emojiPattern": "^[\\p{Emoji}\\p{Emoji_Presentation}\\p{Extended_Pictographic}][\\uFE0E\\uFE0F]?\\s*"
        }
      }
    },
    "gemini": {
      "hostname": "gemini.google.com",
      "selectors": {
        "messages": {
          "combined": "user-query, model-response"
        },
        "content": {
          "user": ".query-text",
          "assistant": ".response-container-content"
        },
        "generation": "button[aria-label*=\"Stop\"]",
        "role": {
          "strategy": "tagname",
          "userTag": "user-query",
          "assistantTag": "model-response"
        },
        "title": {
          "strategy": "selector",
          "selector": "span.conversation-title",
          "emojiPattern": "^[\\p{Emoji}\\p{Emoji_Presentation}\\p{Extended_Pictographic}][\\uFE0E\\uFE0F]?\\s*"
        }
      }
    },
    "grok": {
      "hostname": "grok.com",
      "selectors": {
        "messages": {
          "primary": ".message-bubble"
        },
        "content": {
          "user": ".message-bubble",
          "assistant": ".message-bubble"
        },
        "generation": "",
        "role": {
          "strategy": "sibling-button",
          "userMarker": "button[aria-label='Edit'], button[aria-label='편집']",
          "assistantMarker": "button[aria-label='Regenerate'], button[aria-label='다시 생성']"
        },
        "title": {
          "strategy": "document-title",
          "suffixPattern": "\\s*[-–—]\\s*Grok$",
          "emojiPattern": "^[\\p{Emoji_Presentation}\\p{Extended_Pictographic}]\\s*"
        }
      }
    },
    "perplexity": {
      "hostname": "perplexity.ai",
      "selectors": {
        "messages": {
          "combined": "h1.group\\/query, div[id^='markdown-content-']"
        },
        "content": {
          "user": "span.select-text",
          "assistant": "div.prose"
        },
        "generation": "",
        "role": {
          "strategy": "combined-selector",
          "userSelector": "h1.group\\/query",
          "assistantSelector": "div[id^='markdown-content-']"
        },
        "title": {
          "strategy": "document-title",
          "suffixPattern": "\\s*[-–—]\\s*Perplexity$",
          "emojiPattern": "^[\\p{Emoji_Presentation}\\p{Extended_Pictographic}]\\s*"
        }
      }
    }
  }
}
